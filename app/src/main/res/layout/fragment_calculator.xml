<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.Calculator">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ORMWeight"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Weight"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="phone"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bodyPercentageWeight"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="360dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Weight"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="phone"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/Reps"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="140dp"
        android:hint="Reps"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/RPE"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="140dp"
        android:hint="RPE"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/weightInKg"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="140dp"
        android:hint="Weight in Kg"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            />



    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/bodyPercentageCalc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="5dp"
        android:hint="Body Weight"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            />



    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/cpWeight"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="5dp"
        android:hint="Weight"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/RPEreps"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="5dp"
        android:hint="Reps"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/percentageText"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="140dp"
        android:hint="Percentage"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/calorieInput"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="140dp"
        android:hint="Kilojules"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            />

    </com.google.android.material.textfield.TextInputLayout>




    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:scaleY="2"
        android:scaleX="2"
        android:layout_marginLeft="40dp"
        android:textOff="KG"
        android:switchMinWidth="50dp"
        android:showText="true"
        android:textOn="Lb"
        />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:scaleY="2"
        android:scaleX="2"
        android:layout_marginLeft="40dp"
        android:textOff="Kj"
        android:switchMinWidth="50dp"
        android:showText="true"
        android:textOn="C"
        />

    <Button
        android:id="@+id/submit2"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:width="150dp"
        android:height="65dp"
        android:text="One Rep Max"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submit"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="147dp"
        android:width="150dp"
        android:height="65dp"
        android:text="Calculate"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submitCC"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="217dp"
        android:width="150dp"
        android:height="65dp"
        android:text="Convert"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submitRPE"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="287dp"
        android:width="150dp"
        android:height="65dp"
        android:text="Get RPE Weight"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submitWeightPercentage"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="357dp"
        android:width="150dp"
        android:height="65dp"
        android:text="Get Percentage of Body"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submit1"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="77dp"
        android:width="150dp"
        android:height="65dp"
        android:text="Convert Weight"
        android:textSize="15dp" />



    <TextView
        android:id="@+id/KGresult"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:layout_marginTop="600dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/LBresult"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_marginTop="530dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/stopwatch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="455dp"
        android:text="Stopwatch"
        android:textColor="@color/primaryTextColor"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_gravity="center_horizontal"
        android:text="00:00:00"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="100sp"
        android:layout_marginTop="560dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btStart"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="480dp"
        android:width="140dp"
        android:height="65dp"
        android:text="START"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btPause"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="480dp"
        android:width="140dp"
        android:height="65dp"
        android:text="PAUSE"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btReset"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="480dp"
        android:width="140dp"
        android:height="65dp"
        android:text="RESET"
        android:textSize="15dp" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:scaleY="1.2"
        android:scaleX="1.2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-40dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/barbell" />





</androidx.coordinatorlayout.widget.CoordinatorLayout>

